<assembly>
  <id>dist</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <outputDirectory>dist/</outputDirectory>
    </dependencySet>
  </dependencySets>  
  <fileSets>
    <fileSet>
      <directory>dist/</directory>
      <includes>
      	<include>*.sh</include>
      	<include>*.bat</include>
      	<include>*.xml</include>      	      	
      </includes>
    </fileSet>
    <fileSet>
     <directory>config/developer</directory>
      <outputDirectory>dist/config/developer</outputDirectory>
      <includes>
      	<include>*.*</include>
      </includes>
    </fileSet>
	    <fileSet>
     <directory>config/main</directory>
      <outputDirectory>dist/config/main</outputDirectory>
      <includes>
      	<include>*.*</include>
      </includes>
    </fileSet>
	  <fileSet>
     <directory>config/network</directory>
      <outputDirectory>dist/config/network</outputDirectory>
      <includes>
      	<include>*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>config/</directory>
      <outputDirectory>dist/config/</outputDirectory>
      <includes>
      	<include>*.*</include>
      </includes>
      <excludes>
      	<exclude>log4j.xml</exclude>
      </excludes>
    </fileSet>    
    <fileSet>
      <directory>docs/</directory>
      <outputDirectory>dist/docs/</outputDirectory>
      <includes>
      	<include>*.txt*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>config/</directory>
      <outputDirectory>dist/</outputDirectory>
      <includes>
      	<include>log4j.xml</include>
      </includes>
    </fileSet>    
  </fileSets>
</assembly>